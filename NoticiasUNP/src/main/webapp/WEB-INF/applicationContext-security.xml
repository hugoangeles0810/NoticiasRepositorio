                <security:user name="roberto" password="29b502e872f1e57b361040ebfa1a7963c7da92de" authorities="admin, user" />
                <security:user name="carlos" password="d05238b27c80b1ef28d311d0d08929ba9b1e948e" authorities="admin, user" />
                <security:user name="user" password="12dea96fec20593566ab75692c9949596833adc9" authorities="user" />
            </security:user-service>
        </security:authentication-provider>
    </security:authentication-manager>
    
    
</beans>
